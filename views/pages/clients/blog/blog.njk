{% extends "layouts/clients/masterLayout.njk" %} {% import "components/clients/index/banner.njk" as hero %} {% import
"components/clients/index/card.njk" as card %} {% block content %}
<!-- ***site header html end*** -->
<main id="content" class="site-main">
  <!-- ***Inner Banner html start form here*** -->
  <div class="inner-banner-wrap">
    <div class="inner-baner-container" style="background-image: url(/clients/images/blog/3.jpg)">
      <div class="container">
        <div class="inner-banner-content">
          <h1 class="page-title">Artikel Blog</h1>
        </div>
      </div>
    </div>
  </div>
  <!-- ***Inner Banner html end here*** -->
  <div class="archive-section blog-archive">
    <div class="container">
      <div class="row">
        <div class="col-lg-8 primary right-sidebar">
          <!-- blog post item html start -->
          <div class="grid blog-inner row">
            {% for blog in blogs.rows %}
            {{ card.cardBlog(blog.title, blog.Category.name, blog.description, "/blog/"+blog.slug, 0, blog.thumbnail) }}
            {% endfor %}
          </div>
          <!-- blog post item html end -->
          <!-- pagination html start-->
          <div class="post-navigation-wrap">
            <nav>
              <ul class="pagination">
                {% set totalPages = (blogs.count / 4) + 1 %}
                {% for i in range(1, totalPages|round(0, 'ceil')) %}
                <li {% if page==i %} class="active" {% endif %}>
                  {% if categoryParams %}
                  <a href="/blog?{{ categoryParams }}&page={{ i }}">{{ i }}</a>
                  {% else %}
                  <a href="/blog?page={{ i }}">{{ i }}</a>
                  {% endif %}
                </li>
                {% endfor %}
              </ul>
            </nav>
          </div>
          <!-- pagination html start-->
        </div>
        {% include "layouts/clients/author.njk" %}
      </div>
    </div>
  </div>
</main>
<!-- ***site footer html start form here*** -->

<!-- ***Footer start*** -->
{% include "components/clients/index/footer.njk" %}
<!-- ***Footer end*** -->

{% include "components/clients/index/backToTop.njk" %}

<!-- ***custom search field html*** -->
<div class="header-search-form">
  <div class="container">
    <div class="header-search-container">
      <form class="search-form" role="search" method="get">
        <input type="text" name="s" placeholder="Enter your text..." />
      </form>
      <a href="#" class="search-close">
        <i class="fas fa-times"></i>
      </a>
    </div>
  </div>
</div>
<!-- ***custom search field html*** -->

{% endblock content %}